<%- include('../Admin-Layout/Admin-header.ejs')  %>

	<!-- SIDEBAR -->
	<section id="sidebar">
		<a href="#" class="brand">
			<i class='bx bxs-book-bookmark'></i>
     
			<span class="text"> Admin </span>
		</a>
		<ul class="side-menu top">
			<li >
				<a href="/admin/<%= Admin._id %>">
					<i class='bx bxs-dashboard' ></i>
					<span class="text">Dashboard</span>
				</a>
				
			</li>
			<li >
				<a href="/adminstudent/<%= Admin._id %>">
					<i class='bx bxs-shopping-bag-alt' ></i>
					<span class="text"> Student List</span>
				</a>
			</li>
			<li>
				<a href="/adminteacher/<%= Admin._id %>">
					<i class='bx bxs-doughnut-chart' ></i>
					<span class="text"> Teacher List</span>
				</a>
			</li>
			<li class="active">
				<a href="/adminannounce/<%= Admin._id %>">
					<i class='bx bxs-message-dots' ></i>
					<span class="text"> Announcement</span>
				</a>
			</li>
			<li>
				<a href="/adminMentor/<%= Admin._id %>">
					<i class='bx bxs-group' ></i>
					<span class="text">Manage Mentors</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="#">
					<i class='bx bxs-cog' ></i>
					<span class="text">Settings</span>
				</a>
			</li>
			<li>
				<a href="#" class="logout">
					<i class='bx bxs-log-out-circle' ></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->



	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
		
			<i class='bx bx-menu' ></i>


			<a href="#" class="nav-link"> <%= Admin.name %>   </a>
			<a href="#" class="profile">
				<img src="<%= Admin.profile %>"  alt="Teacher">
			</a>
		
			<!-- <dark to light checkbox -->
		

			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			
			
		
	</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
        
        <main>
					


			<div class="table-data">
				<div class="order">
					<div class="head">
                        <div>
                            <h3>Announcement</h3>
                            <button id="contbtn">Make An Announcement</button>
                        </div>
                        
                        <table id="myTable">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Details</th>
                                    <th>Date</th>
                                    <!-- <th>Today's Attendance</th>
                                    <th>Transfer to Other Teacher</th> -->
                                </tr>
                            </thead>
                            <tbody>
                                <%
                                    if(announce.length>0){
                                        announce.forEach((ann)=>{
                                            %>
                                            <tr>
                                                <td><%= ann.title %></td>
                                                <td><%= ann.detail %></td>
                                                <td><%= ann.date %></td>
                                            </tr>
                                            <%
                                        })
                                    }
                                %>
                            </tbody>
                        </table>
                        
				    </div>
                </div>
            </div>
				
		</main>
		
		<!-- MAIN -->
	</section>
	<!-- CONTENT -->
	
    <div class="container-modal hided" id="cont">
        <div class="form-base">
            
            <form action="/adminannounce/<%=Admin._id%>" method="post">
                <i class="fa-solid fa-xmark" id="xmark"></i>
                <input type="hidden" id="ConversationId" name="ConversationId" value="<%= Admin._id %>">
                <input type="text" placeholder="title" name="title" id="title">
                <input type="text" placeholder="detail" name="detail" id="detail">
                <input type="date" name="date" id="date">
                <input type="submit" value="Submit">
            </form>
        </div>
    </div>


	<script>
		
		const contbtn = document.getElementById('contbtn')
		const xmark = document.getElementById('xmark')
		const cont = document.getElementById('cont')

		contbtn.addEventListener('click',()=>{
		  cont.classList.remove('hided')
		})
		xmark.addEventListener('click',()=>{
		  cont.classList.add('hided')
		})
	</script>

