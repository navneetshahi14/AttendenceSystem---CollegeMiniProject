			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			
			
		
	</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Dashboard</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Dashboard</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							
							<a class="active" href="#">Home</a>
						</li>
					</ul>
				</div>
				<a href="#" class="btn-download">
					<i class='bx bxs-cloud-download' ></i>
					<span class="text">Download Attendance PDF</span>
				</a>
			</div>

            

			<ul class="headinglist">
                <li>S.No</li>
                <li>Name</li>
                <li>Subject</li>
                <li>Attendence</li>
                <li>Date</li>
			</ul>

			<%
				if(attend.length > 0){
					let i = 1
					attend.forEach(function(attendence){
						let rollno = parseInt(student.rollNo)
						let attendences = attendence.rollno
						%>
						<ul class="headinglist">
							<li><%= i++ %></li>
							<li><%= student.name %></li>
							<li><%= attendence.subject %></li>
							<%
								if(attendence[rollno] === 'P'){
									%>
									<li>P</li>
									<%
								}else{
									%>
									<li>A</li>
									<%
								}
							%>

							
							<li><%= attendence.date %></li>
						</ul>
						<%
					})
				}else{
					%>
						<p>No Attendence Found</p>
					<%
				}
			%>


		
		</main>
		<!-- MAIN -->
	</section>
	<!-- CONTENT -->

