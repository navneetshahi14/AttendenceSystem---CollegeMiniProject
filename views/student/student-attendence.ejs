	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
		
			<i class='bx bx-menu' ></i>


			<a href="#" class="nav-link">  <%= student.name %>  </a>
			<a href="#" class="profile">
				<img src="<%= student.profile %>"  alt="Teacher">
